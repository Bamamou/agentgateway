{
  "listener": {
    "sse": {
      "host": "0.0.0.0",
      "port": 8001
    }
  },
  "rules": [
    {
      "key": "sub",
      "value": "1234567890",
      "resource": {"type": "tool", "id": "*"},
      "matcher": {"type": "equals"}
    }
  ],
  "targets": {
    "git": {
      "stdio": {
        "cmd": "uvx",
        "args": ["mcp-server-git"]
      }
    },
    "everything": {
      "stdio": {
        "cmd": "npx",
        "args": ["@modelcontextprotocol/server-everything"]
      }
    }
  }
}

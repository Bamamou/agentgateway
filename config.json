{
  "type": "static",
  "listener": {
    "type": "sse",
    "host": "0.0.0.0",
    "port": 8001
  },
  "policies": [
    {
      "key": "sub",
      "value": "1234567890",
      "resource": {
        "type": "tool",
        "id": "*"
      },
      "matcher": {
        "type": "equals"
      }
    }
  ],
  "targets": [
    {
      "name": "git",
      "spec": {
        "type": "stdio",
        "cmd": "uvx",
        "args": [
          "mcp-server-git"
        ]
      }
    },
    {
      "name": "everything",
      "spec": {
        "type": "stdio",
        "cmd": "npx",
        "args": [
          "@modelcontextprotocol/server-everything"
        ]
      }
    }
  ]
}
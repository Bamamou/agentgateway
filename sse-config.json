{
  "input": {
    "sse": {
      "host": "127.0.0.1",
      "port": 8001
    }
  },
  "rules": [
    {
      "key": "user",
      "value": "admin",
      "resource": {"type": "tool", "id": "increment"},
      "matcher": {"type": "equals"}
    }
  ],
  "outputs": {
    "git": {
      "stdio": {
        "cmd": "uvx",
        "args": ["mcp-server-git"]
      }
    },
    "everything": {
      "stdio": {
        "cmd": "npx",
        "args": ["@modelcontextprotocol/server-everything"]
      }
    }
  }
}
